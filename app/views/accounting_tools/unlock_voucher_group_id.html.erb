<% @page_title = 'Unlock Voucher Group ID' %>

<h2>Unlock Voucher Group ID</h2>
<h6>Use UPDDTA APVGP if this tool is not working</h6>

<%= form_tag unlock_voucher_group_id_path, method: 'get', id: 'whs-item-form' do %>
  <div class="form-group">
    <%= text_field_tag 'ws_id', nil, class: 'form-control',
      placeholder: 'Voucher Group ID', maxlength: '5', autofocus: 'autofocus' %>
  </div>

  <%= submit_tag 'Unlock Voucher Group ID', class: 'btn btn-primary' %>
<% end %>

<% if @results_msg.any? %>
  <div id="item-whs-results" class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3 well">
    <% @results_msg.each do |msg| %>
      <ul>
        <li><%= msg.html_safe %></li>
      </ul>
    <% end %>
  </div>
<% end %>