<% @page_title = 'Unlock PO' %>

<h2>Unlock PO</h2>
<h6>Use RFADMIN #17 if this tool doesn't unlock the PO</h6>

<%= form_tag unlock_po_path, method: 'get', id: 'po-form' do %>
  <div class="form-group">
    <%= text_field_tag 'po_number', nil, class: 'form-control',
      placeholder: 'PO Number', maxlength: '30', autofocus: 'autofocus' %>
  </div>
  <%= submit_tag 'Unlock PO', class: 'btn btn-primary' %>
<% end %>

<% if @results_msg.any? %>
  <div id="po-results" class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3 well">
    <% @results_msg.each do |msg| %>
      <ul>
        <li><%= msg.html_safe %></li>
      </ul>
    <% end %>
  </div>
<% end %>