<% @page_title = 'Unlock WHS Item' %>

<h2>Unlock WHS Item</h2>
<h6>Use UPDDTA ITBAL if this tool is not working</h6>

<%= form_tag unlock_whs_item_path, method: 'get', id: 'whs-item-form' do %>
  <div class="form-group">
    <%= text_field_tag 'item_num', nil, class: 'form-control',
      placeholder: 'Item Number', maxlength: '30', autofocus: 'autofocus' %>
  </div>

  <div class="form-group">
    <label for="whs_id">WHS:</label>
    <%= select_tag :whs_id, options_for_select(as400_warehouses), class: 'form-control' %>
  </div>

  <%= submit_tag 'Unlock Item', class: 'btn btn-primary' %>
<% end %>

<% if @results_msg.any? %>
  <div id="item-whs-results" class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3 well">
    <% @results_msg.each do |msg| %>
      <ul>
        <li><%= msg.html_safe %></li>
      </ul>
    <% end %>
  </div>
<% end %>